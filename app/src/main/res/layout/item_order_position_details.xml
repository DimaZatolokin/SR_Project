<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.srproject.presentation.models.OrderPositionUI" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="4"
            android:text="@{model.product.name}"
            android:textColor="#442200"
            android:textSize="19sp"
            tools:text="Коробка конфет" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="5dp"
            android:text="@{@string/items(model.amount)}"
            android:textColor="#440000"
            android:textSize="22sp"
            android:textStyle="italic|bold"
            tools:text="4" />

        <ImageView
            android:id="@+id/imgProgress"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="5dp"
            android:contentDescription="@string/position_progress"
            android:scaleType="centerCrop"
            app:positionDone="@{model.done}" />

    </LinearLayout>
</layout>