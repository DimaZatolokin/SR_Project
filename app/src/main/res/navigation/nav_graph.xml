<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentOrderList">

    <fragment
        android:id="@+id/fragmentOrderList"
        android:name="com.srproject.presentation.activeOdrersList.ActiveOrdersFragment"
        android:label="@string/orders_title">

        <action
            android:id="@+id/actionToSettings"
            app:destination="@id/fragmentSettings"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/actionToOrderDetails"
            app:destination="@id/fragmentOrderDetails">

            <argument
                android:name="id"
                app:argType="long" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/fragmentSettings"
        android:name="com.srproject.presentation.settings.SettingsFragment"
        android:label="@string/menu_settings">

        <action
            android:id="@+id/actionToOrderList"
            app:destination="@id/fragmentOrderList"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/fragmentOrderList"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/fragmentOrderDetails"
        android:name="com.srproject.presentation.orderDetails.OrderDetailsFragment"
        android:label="@string/order_details_title">

        <argument
            android:name="id"
            app:argType="long" />

        <action
            android:id="@+id/actionToOrderEdit"
            app:destination="@id/fragmentOrderEdit">

            <argument
                android:name="id"
                app:argType="long" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/fragmentOrderEdit"
        android:name="com.srproject.presentation.orderEdit.OrderEditFragment"
        android:label="@string/order_edit_title">

        <argument
            android:name="id"
            app:argType="long" />
    </fragment>

</navigation>